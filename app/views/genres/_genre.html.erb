<div id="<%= dom_id genre %>" class="p-2 d-flex flex-column">

  <div class="genre-content">
    <h2><%= genre.name %></h2>
    <% if !genre.description.nil? && !genre.description&.empty? %>
      <div class="genre-description p-2 d-flex flex-column">
          <%= genre.description %>
      </div>
    <% end %>
  </div>
</div>
